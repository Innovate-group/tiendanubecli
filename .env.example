# Tienda Nube / Nuvemshop FTP Configuration
# Copy this file to .env and fill in your actual credentials

# FTP Server Host (provided by Tienda Nube / Nuvemshop)
# Example: ftp.tiendanube.com or ftp.nuvemshop.com.br
FTP_HOST=your-ftp-host.com

# FTP Username (provided by Tienda Nube / Nuvemshop)
FTP_USER=your-username

# FTP Password (provided by Tienda Nube / Nuvemshop)
FTP_PASSWORD=your-password

# FTP Port (default: 21 for standard FTP, 990 for FTPS)
FTP_PORT=21

# Use secure FTP connection (true/false)
# Set to true if your server supports FTPS
FTP_SECURE=false

# Base path on the FTP server (usually "/" or "/httpdocs")
# Leave as "/" if you're not sure
FTP_BASE_PATH=/

# Connection timeout in milliseconds (default: 30000 = 30 seconds)
FTP_TIMEOUT=30000

# Enable debug mode for verbose logging (true/false)
# Set to true for detailed FTP protocol logs
DEBUG=false

